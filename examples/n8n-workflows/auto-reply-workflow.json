      "type": "n8n-nodes-base.webhook",
      "typeVersion": 1,
      "position": [250, 300]
    },
    {
      "parameters": {
        "conditions": {
          "string": [
            {
              "value1": "={{$json.body.event}}",
              "operation": "equals",
              "value2": "messages.upsert"
            }
          ]
        }
      },
      "id": "filter-new-messages",
      "name": "Filter New Messages",
      "type": "n8n-nodes-base.if",
      "typeVersion": 1,
      "position": [450, 300]
    },
    {
      "parameters": {
        "jsCode": "// Extract message data\nconst messageData = $input.item.json.body.data;\n\nreturn {\n  remoteJid: messageData.key.remoteJid,\n  messageText: messageData.message?.conversation || messageData.message?.extendedTextMessage?.text || '',\n  fromMe: messageData.key.fromMe,\n  messageId: messageData.key.id\n};"
      },
      "id": "extract-message-data",
      "name": "Extract Message Data",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [650, 300]
    },
    {
      "parameters": {
        "conditions": {
          "boolean": [
            {
              "value1": "={{$json.fromMe}}",
              "value2": false
            }
          ]
        }
      },
      "id": "filter-incoming-only",
      "name": "Filter Incoming Only",
      "type": "n8n-nodes-base.if",
      "typeVersion": 1,
      "position": [850, 300]
    },
    {
      "parameters": {
        "mode": "chooseBranch",
        "rules": {
          "values": [
            {
              "conditions": {
                "string": [
                  {
                    "value1": "={{$json.messageText.toLowerCase()}}",
                    "operation": "contains",
                    "value2": "hello"
                  }
                ]
              },
              "outputKey": "greeting"
            },
            {
              "conditions": {
                "string": [
                  {
                    "value1": "={{$json.messageText.toLowerCase()}}",
                    "operation": "contains",
                    "value2": "help"
                  }
                ]
              },
              "outputKey": "help"
            },
            {
              "conditions": {
                "string": [
                  {
                    "value1": "={{$json.messageText.toLowerCase()}}",
                    "operation": "contains",
                    "value2": "price"
                  }
                ]
              },
              "outputKey": "pricing"
            }
          ]
        },
        "fallbackOutput": "other"
      },
      "id": "route-by-keyword",
      "name": "Route by Keyword",
      "type": "n8n-nodes-base.switch",
      "typeVersion": 1,
      "position": [1050, 300]
