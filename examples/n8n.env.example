# ==========================================
# N8N CONFIGURATION
# ==========================================
# Copy this file to .env and fill in your values

# ==========================================
# BASIC CONFIGURATION
# ==========================================
N8N_HOST=0.0.0.0
N8N_PORT=5678
N8N_PROTOCOL=https
N8N_EDITOR_BASE_URL=https://your-n8n-domain.com

# Webhook URL (must be publicly accessible)
WEBHOOK_URL=https://your-n8n-domain.com

# ==========================================
# DATABASE CONFIGURATION
# ==========================================
DB_TYPE=postgresdb

# PostgreSQL Configuration
DB_POSTGRESDB_HOST=whatsapp-postgres-server.postgres.database.azure.com
DB_POSTGRESDB_PORT=5432
DB_POSTGRESDB_DATABASE=n8n_db
DB_POSTGRESDB_USER=adminuser
DB_POSTGRESDB_PASSWORD=YourStrongPassword123!
DB_POSTGRESDB_SSL_ENABLED=true
DB_POSTGRESDB_SSL_REJECT_UNAUTHORIZED=false

# ==========================================
# ENCRYPTION
# ==========================================
# Generate with: openssl rand -hex 32
N8N_ENCRYPTION_KEY=your-encryption-key-here

# ==========================================
# TIMEZONE
# ==========================================
GENERIC_TIMEZONE=America/New_York
TZ=America/New_York

# ==========================================
# EXECUTION CONFIGURATION
# ==========================================
EXECUTIONS_PROCESS=main
EXECUTIONS_MODE=regular

# Save execution data
EXECUTIONS_DATA_SAVE_ON_ERROR=all
EXECUTIONS_DATA_SAVE_ON_SUCCESS=all
EXECUTIONS_DATA_SAVE_MANUAL_EXECUTIONS=true

# Prune execution data (optional)
EXECUTIONS_DATA_MAX_AGE=168
EXECUTIONS_DATA_PRUNE=true

# ==========================================
# WORKFLOW CONFIGURATION
# ==========================================
WORKFLOWS_DEFAULT_NAME=My Workflow

# ==========================================
# USER MANAGEMENT
# ==========================================
# Set to true for production multi-user setup
N8N_USER_MANAGEMENT_DISABLED=false

# ==========================================
# SECURITY
# ==========================================
# Basic Auth (optional, for simple authentication)
N8N_BASIC_AUTH_ACTIVE=false
N8N_BASIC_AUTH_USER=
N8N_BASIC_AUTH_PASSWORD=

# JWT Auth (recommended for production)
N8N_JWT_AUTH_ACTIVE=false
N8N_JWT_AUTH_HEADER=
N8N_JWT_AUTH_HEADER_VALUE_PREFIX=

# ==========================================
# NODES CONFIGURATION
# ==========================================
# External node modules to load
EXTERNAL_FRONTEND_HOOKS_URLS=
NODES_INCLUDE=
NODES_EXCLUDE=

# Custom nodes directory
N8N_CUSTOM_EXTENSIONS=

# ==========================================
# LOGGING
# ==========================================
N8N_LOG_LEVEL=info
N8N_LOG_OUTPUT=console

# ==========================================
# METRICS (Optional)
# ==========================================
N8N_METRICS=false
N8N_METRICS_PREFIX=n8n_

# ==========================================
# VERSION CONTROL (Optional)
# ==========================================
N8N_VERSION_NOTIFICATIONS_ENABLED=true
N8N_VERSION_NOTIFICATIONS_ENDPOINT=https://api.n8n.io/versions/

# ==========================================
# COMMUNITY NODES
# ==========================================
# Set to true to allow community nodes installation
N8N_COMMUNITY_PACKAGES_ENABLED=true

# ==========================================
# FILE SIZE LIMITS
# ==========================================
N8N_PAYLOAD_SIZE_MAX=16
N8N_BINARY_DATA_TTL=60

# ==========================================
# PERFORMANCE
# ==========================================
N8N_CONCURRENCY_PRODUCTION_LIMIT=10

# ==========================================
# CUSTOM ENVIRONMENT VARIABLES
# ==========================================
# Add your custom environment variables here
# Example: EVOLUTION_API_URL=http://evolution-api:8080
EVOLUTION_API_URL=http://evolution-api-container:8080
EVOLUTION_API_KEY=your-secure-api-key-here
